<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pgv.controllers.EmailController">
    <TabPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <!-- Tab de Enviar Correo -->
        <Tab text="Enviar Correo" closable="false">
            <AnchorPane>
                <GridPane hgap="10" vgap="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="75.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="NEVER" />
                    </rowConstraints>
                    <Label text="To:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="toField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Subject:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="subjectField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Body:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextArea fx:id="bodyField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.rowSpan="2" />
                    <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <Button text="Send" onAction="#handleSend" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                        <Button text="Clear" onAction="#handleClearSendFields" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    </HBox>
                </GridPane>
            </AnchorPane>
        </Tab>

        <!-- Tab de Recibir Correos -->
        <Tab text="Recibir Correos" closable="false">
            <AnchorPane>
                <GridPane hgap="10" vgap="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="75.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>
                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <Button onAction="#handleLoadEmails" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Load Emails"/>
                        <Button onAction="#handleClearReceiveFields" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Clear"/>
                    </HBox>
                    <TableView fx:id="emailsTable" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="remitenteColumn" text="Remitente" />
                            <TableColumn fx:id="destinatarioColumn" text="Destinatario" />
                            <TableColumn fx:id="asuntoColumn" text="Asunto" />
                            <TableColumn fx:id="cuerpoColumn" text="Cuerpo" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </GridPane>
            </AnchorPane>
        </Tab>
    </TabPane>
</AnchorPane>